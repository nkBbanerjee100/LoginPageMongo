<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <br>
        <h1 class="text-success text-center">Login form</h1>
        <div class="col-lg-8 m-auto d-block">
            <form action="/register" onsubmit="return validation()" class="bg-light" method="POST">
                <div>
                    <label> Username : </label>
                    <input type="text" placeholder="ex:nk_1234" name="user" class="form-control" id="user"
                        autocomplete="off">
                    <span id="username" class="text-danger font-weight-bold"> </span>
                </div>
                <div>
                    <label> Password : </label>
                    <input type="password" placeholder="ex:@qwr42352" name="userpass" class="form-control" id="userpass"
                        autocomplete="off">
                    <span id="pass" class="text-danger font-weight-bold"> </span>

                </div>
                <div>
                    <label> Confirm Password : </label>
                    <input type="password" placeholder="ex:@qwr42352" name="userconpass" class="form-control" id="userpasscon"
                        autocomplete="off">
                    <span id="conpass" class="text-danger font-weight-bold"> </span>

                </div>
                <div>
                    <label> Phone Number : </label>
                    <input type="number" placeholder="write your phone number" name="userphone" class="form-control"
                        id="userphone" autocomplete="off">     
                </div>
                <div>
                    <label> Email : </label>
                    <input type="email" placeholder="write your e-mail ID" name="usermail" class="form-control"
                        id="usermail" autocomplete="off">
                    <span id="ma" class="text-danger font-weight-bold"> </span>

                </div>
                <div>
                    <label> About Yourself : </label>
                    <input type="text" placeholder="write about yourself" name="userabout" class="form-control"
                        id="userabout" autocomplete="off">
                </div>
                <div>
                    <label for="genders">Gender:</label>

                    <select name="genders" id="gender" class="form-control">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="trans">Transgender</option>
                        <option value="notToSay">Prfer not to say</option>
                    </select>
                </div>
                <br>
                <input type="submit" name="submit" value="submit" class="btn btn-success"/>
            </form>
        </div>
    </div>
    <script >
        function validation() {
    let user = document.getElementById('user').value;
    if (user === "") {
        document.getElementById('username').innerHTML = "**please fill out the username part"
        return false
    }
    let userPass = document.getElementById('userpass').value;
    if (userPass === "") {
        document.getElementById('pass').innerHTML = "**please enter a valid password"
        return false
    }
    let conUserPass = document.getElementById('userpasscon').value;
    if (conUserPass !== userPass) {
        document.getElementById('conpass').innerHTML = "**password and confirm password aren't matching"
        return false
    }

    let mail = document.getElementById('usermail').value;
    if (mail === "") {
        document.getElementById('ma').innerHTML = "**please enter a valid mail"
        return false
    }

}
    </script>
</body>

</html>